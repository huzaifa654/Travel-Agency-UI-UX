<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:background="@drawable/back_bg"
    android:orientation="vertical"
    tools:context=".home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp">

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/top_menu_yello" />

        <Button
            android:layout_width="28dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/top_search" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:fontFamily="sans-serif-black"
        android:text="Explore"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="clip_horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/search_bg"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="40dp"
            android:text="Search Destination"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="45dp"
            android:background="@drawable/ellpise" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="88dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/card_1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="88dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            app:srcCompat="@drawable/card_2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="70dp"
            android:layout_height="88dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            app:srcCompat="@drawable/card_3" />

        <ImageView
            android:id="@+id/img0"
            android:layout_width="70dp"
            android:layout_height="88dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            app:srcCompat="@drawable/card_4" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="Popular"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/card_view_1" />
        <ImageView
            android:id="@+id/imag0"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginLeft="120dp"
            app:srcCompat="@drawable/card_view_4" />

        <ImageView
            android:id="@+id/imag6"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginLeft="230dp"
            app:srcCompat="@drawable/card_view_1" />


    </RelativeLayout>
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="Popular"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            app:srcCompat="@drawable/card_view_2" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            app:srcCompat="@drawable/card_view_3" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="255dp"
            app:srcCompat="@drawable/card_view_2" />
    </RelativeLayout>


</LinearLayout>